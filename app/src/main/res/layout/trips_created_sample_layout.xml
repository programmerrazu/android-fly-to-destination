<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_tc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:background="#FFFFFF"
    android:padding="4dp"
    card_view:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        xmlns:app = "http://schemas.android.com/apk/res-auto"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:background = "#FFFFFF"
        android:elevation = "16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id = "@+id/tc_owner_profile_pic"
            android:layout_width = "80dp"
            android:layout_height = "80dp"
            android:layout_marginStart = "18dp"
            android:layout_marginBottom = "12dp"
            android:src = "@drawable/photo_male_8"
            app:civ_border = "true"
            app:civ_border_width = "2dp"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toTopOf = "parent" />

        <TextView
            android:id = "@+id/tc_user_title_text"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_gravity = "center"
            android:layout_marginEnd = "8dp"
            android:layout_weight = ".75"
            android:fontFamily="@font/sf_pro_text"
            android:gravity = "center"
            android:singleLine = "false"
            android:text = "M"
            android:textColor = "#827f7d"
            android:textSize = "10sp"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf = "@+id/tc_owner_profile_pic"
            app:layout_constraintHorizontal_bias = "0.578"
            app:layout_constraintStart_toStartOf = "@+id/tc_owner_profile_pic"
            app:layout_constraintTop_toTopOf = "parent"
            app:layout_constraintVertical_bias = "0.84" />


        <TextView
            android:id = "@+id/tc_title_text"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "8dp"
            android:layout_marginTop = "10dp"
            android:layout_marginEnd = "26dp"
            android:fontFamily = "@font/sf_pro_text"
            android:maxLines = "2"
            android:singleLine = "false"
            android:text = "Roadtrip from Sydney"
            android:textColor = "#23527C"
            android:textSize = "20sp"
            android:textStyle = "bold"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toEndOf = "@+id/tc_owner_profile_pic"
            app:layout_constraintTop_toTopOf = "parent"
            app:layout_constraintVertical_bias = "0.217" />

        <TextView
            android:id = "@+id/tc_desc_text"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "8dp"
            android:layout_marginEnd = "24dp"
            android:layout_marginBottom = "8dp"
            android:fontFamily = "@font/arial"
            android:maxLines = "2"
            android:singleLine = "false"
            android:text = "@string/medium_lorem_ipsum"
            android:textAlignment = "viewStart"
            android:textColor = "#827f7d"
            android:textSize = "11sp"
            android:visibility = "gone"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintHorizontal_bias = "1.0"
            app:layout_constraintStart_toEndOf = "@+id/tc_owner_profile_pic"
            app:layout_constraintTop_toBottomOf = "@+id/tc_title_text"
            app:layout_constraintVertical_bias = "0.0" />

        <TextView
            android:id = "@+id/tc_time_text"
            android:layout_width = "0dp"
            android:layout_height = "12dp"
            android:layout_marginStart = "8dp"
            android:layout_marginTop = "4dp"
            android:layout_marginEnd = "26dp"
            android:layout_marginBottom = "8dp"
            android:drawableStart = "@drawable/ic_calendar"
            android:fontFamily="@font/sf_pro_text"
            android:drawablePadding = "2dp"
            android:text = "  Mar 31, 2019 - Apr 6, 2019 (Flexible)"
            android:textColor = "#5BAC99"
            android:textSize = "10sp"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintStart_toEndOf = "@+id/tc_owner_profile_pic"
            app:layout_constraintTop_toBottomOf = "@+id/tc_desc_text"
            app:layout_constraintVertical_bias = "0.0" />


        <TextView
            android:id = "@+id/tc_location_text"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginStart = "8dp"
            android:layout_marginTop = "14dp"
            android:layout_marginEnd = "16dp"
            android:layout_marginBottom = "8dp"
            android:drawableStart = "@drawable/ic_location_on_profile"
            android:drawablePadding = "2dp"
            android:fontFamily = "@font/sf_pro_text"
            android:gravity = "center"
            android:paddingEnd = "2dp"
            android:singleLine = "false"
            android:text = "Port Morque"
            android:textColor = "#827f7d"
            android:textSize = "9sp"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintHorizontal_bias = "1.0"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintTop_toBottomOf = "@+id/tc_owner_profile_pic" />

        <ImageButton
            android:id = "@+id/imageButton"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "8dp"
            android:layout_marginEnd = "8dp"
            android:background = "?attr/selectableItemBackgroundBorderless"
            android:padding = "4dp"
            android:tint = "@color/grey_20"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"
            app:srcCompat = "@drawable/ic_favorites" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>