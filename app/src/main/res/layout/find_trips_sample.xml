<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_ft"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:background="#FFFFFF"
    android:clickable="true"
    android:padding="4dp"
    card_view:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="16dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/ft_owner_profile_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="16dp"
            card_view:civ_border="true"
            card_view:civ_border_width="3dp"
            card_view:civ_shadow="true"
            card_view:civ_shadow_radius="4"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ft_user_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".75"
            android:fontFamily="@font/tahoma_regular_font"
            android:gravity="center"
            android:singleLine="false"
            android:text="M"
            android:textColor="#827f7d"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/ratingBar"
            app:layout_constraintEnd_toEndOf="@+id/ft_owner_profile_pic"
            app:layout_constraintStart_toStartOf="@+id/ft_owner_profile_pic"
            app:layout_constraintTop_toBottomOf="@+id/ft_owner_profile_pic" />


        <TextView
            android:id="@+id/ft_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/arial"
            android:maxLines="2"
            android:singleLine="false"
            android:text="Roadtrip from Sydney"
            android:textColor="#23527C"
            android:textSize="20sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/ft_owner_profile_pic"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.217" />

        <TextView
            android:id="@+id/ft_desc_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/arial"
            android:maxLines="2"
            android:singleLine="false"
            android:text="@string/medium_lorem_ipsum"
            android:textAlignment="viewStart"
            android:textColor="#827f7d"
            android:textSize="11sp"
            android:visibility="gone"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintStart_toEndOf="@+id/ft_owner_profile_pic"
            card_view:layout_constraintTop_toBottomOf="@+id/ft_title_text"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/ft_time_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="2dp"
            android:text="  Mar 31, 2019 - Apr 6, 2019 (Flexible)"
            android:textColor="#5BAC99"
            android:textSize="10sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/ft_owner_profile_pic"
            card_view:layout_constraintTop_toBottomOf="@+id/ft_desc_text"
            card_view:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/ft_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/ic_location_on_profile"
            android:drawablePadding="2dp"
            android:fontFamily="@font/sf_pro_text"
            android:gravity="center"
            android:paddingEnd="2dp"
            android:singleLine="false"
            android:text="Port Morque"
            android:textColor="#827f7d"
            android:textSize="9sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/ft_owner_profile_pic" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:tint="@color/grey_10"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/ic_favorites" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/joined_users_list"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/ft_location_text"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/ft_owner_profile_pic"
            card_view:layout_constraintTop_toBottomOf="@+id/ft_time_text"
            card_view:layout_constraintVertical_bias="1.0" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Base.Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:numStars="5"
            android:progressTint="@color/colorGafflDeepRed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/ft_owner_profile_pic"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ft_owner_profile_pic" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
